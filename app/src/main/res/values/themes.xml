<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Breedog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_f2</item>
        <item name="colorPrimaryVariant">@color/brown_d9</item>
        <item name="colorOnPrimary">@color/yellow_f2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_f2</item>

        <!-- Status Bar tint. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>

    <!-- Background. -->
    <style name="Theme.Breedog.Base" parent="Theme.Breedog">
        <item name="android:background">@color/gray_f2</item>
    </style>

    <style name="DetailSectionName">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/gray_71</item>
    </style>

    <style name="DetailSectionInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>